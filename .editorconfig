# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
indent_style = space
indent_size = 2

# Zig files
[*.zig]
indent_size = 4

# Source code files
[*.{c,h,cpp,hpp}]
indent_size = 4

# Web files
[*.{js,ts,css,html}]
indent_size = 2

# Configuration files
[*.{json,yml,yaml,toml}]
indent_size = 2

# Documentation
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Windows scripts
[*.{cmd,bat,ps1}]
end_of_line = crlf
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab
